# OpenRouter Configuration Example
# Copy to .env and configure with your OpenRouter API key

# === GENERAL SETTINGS ===
OLLAMA_BASE_URL=http://localhost:11434/v1
DEBUG=false
LOG_LEVEL=INFO

# === OPENROUTER SETTINGS ===
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# === DEFAULT MODEL ===
# Use OpenRouter model format: openai:<model>
# Examples: openai:anthropic/claude-3.5-sonnet, openai:deepseek/deepseek-coder
DEFAULT_MODEL=openai:deepseek/deepseek-coder
DEFAULT_TEMPERATURE=0.3
DEFAULT_RETRIES=2

# === AGENT-SPECIFIC MODELS ===

# Coordinator - tool routing and delegation
COORDINATOR_MODEL=openai:anthropic/claude-3.5-sonnet
COORDINATOR_TEMPERATURE=0.0

# Codebase Investigator - code analysis
CODEBASE_MODEL=openai:deepseek/deepseek-coder
CODEBASE_TEMPERATURE=0.0

# File Editor - file operations (CRITICAL for tool calling)
FILE_EDITOR_MODEL=openai:anthropic/claude-3.5-sonnet
FILE_EDITOR_TEMPERATURE=0.0

# Testing Agent - test generation
TESTING_MODEL=openai:anthropic/claude-3.5-sonnet
TESTING_TEMPERATURE=0.0

# Documentation Agent - docs generation
DOCUMENTATION_MODEL=openai:anthropic/claude-3.5-sonnet
DOCUMENTATION_TEMPERATURE=0.5

# Refactoring Agent - complex refactoring
REFACTORING_MODEL=openai:deepseek/deepseek-coder
REFACTORING_TEMPERATURE=0.0

# Code Generator - NEW file creation
# Valid OpenRouter models:
#   - deepseek/deepseek-chat (best value)
#   - anthropic/claude-3.5-sonnet (best quality) 
#   - deepseek/deepseek-chat (good for code)
CODE_GENERATOR_MODEL=openai:deepseek/deepseek-chat
CODE_GENERATOR_TEMPERATURE=0.1
