# Environment variables for PydanticAI Agent

# Ollama provider configuration
OLLAMA_BASE_URL=http://localhost:11434/v1

# OpenAI provider configuration (optional)
# OPENAI_API_KEY=your-key-here

# Application settings
DEBUG=false
LOG_LEVEL=INFO
DEFAULT_MODEL=ollama:mistral
DEFAULT_TEMPERATURE=0.7
DEFAULT_RETRIES=2

# === AGENT-SPECIFIC MODELS ===

# Coordinator - tool routing and delegation
COORDINATOR_MODEL=ollama:llama3.1:8b-instruct-q8_0
COORDINATOR_TEMPERATURE=0.2

# Codebase Investigator - code analysis
CODEBASE_MODEL=ollama:qwen2.5-coder:14b
CODEBASE_TEMPERATURE=0.3

# File Editor - file operations (CRITICAL for tool calling)
FILE_EDITOR_MODEL=ollama:llama3.1:8b-instruct-q8_0
FILE_EDITOR_TEMPERATURE=0.1

# Testing Agent - test generation
TESTING_MODEL=ollama:llama3.1:8b-instruct-q8_0
TESTING_TEMPERATURE=0.2

# Documentation Agent - docs generation
DOCUMENTATION_MODEL=ollama:llama3.1:8b-instruct-q8_0
DOCUMENTATION_TEMPERATURE=0.5

# Refactoring Agent - complex refactoring
REFACTORING_MODEL=ollama:qwen2.5-coder:14b
REFACTORING_TEMPERATURE=0.2

# Code Generator - NEW file creation with code generation
CODE_GENERATOR_MODEL=ollama:qwen2.5-coder:14b
CODE_GENERATOR_TEMPERATURE=0.1

